@model TaskListModel 

<form method="post">
    <div class="border p-3 m-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Task</h2>
            </hr>
        </div>
         <div>
             <label asp-for="Title">Tittle</label>
             <input asp-for="Title" class="form-control"/>
             <span asp-validation-for="Title" class="text-danger"></span>
         </div>
         <div>
             <label asp-for="Description">Description</label>
             <textarea asp-for="Description" class="form-control"></textarea>
             <span asp-validation-for="Description"></span>
         </div>
         <div>
             <label>Date time</label>
             @Html.EditorFor(m => m.ExpirationDate); 
             @Html.ValidationMessageFor(m => m.ExpirationDate)
             @Html.EditorFor(m => m.DateTime)
             @Html.ValidationMessageFor(m => m.DateTime)
         </div>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to list</a>
</form>